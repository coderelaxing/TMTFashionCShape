@model PagedList.IPagedList<ShopThoiTrang.Models.ModelProducts>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ProductCategory";
    Layout = "~/Views/Shared/LayoutSite.cshtml";
}
@Html.Action("Slideshow", "Module")
<div class="container mt-3">
    <div class="row">
        <div class="col-4">
            @Html.Action("ListCategory", "Module")
            @Html.Action("ProductBuy", "Module")
            @Html.Action("FashionNewspaper", "Module")
            <div class="card vitri mt-3">
                <div class="card-header">
                    Vị Trí
                </div>
                <div class="card-body">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3001.451709581085!2d69.22730441546918!3d41.21192577928071!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x38ae6194733710f9%3A0x74547ed2e9280ee8!2sTMT%20fashion!5e0!3m2!1svi!2s!4v1606979854077!5m2!1svi!2s"
                            width="100%" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0">
                    </iframe>
                </div>
            </div>
            @*  het vi tri*@
        </div>
        <div class="col-8">
            <div class="row san-pham-moi">
                <div class="col-12 loai-sanpham">
                    <h3 class="smp-tieude text-center">
                        @foreach (var row in ViewBag.row_c)
                        {@row.Name}
                    </h3>
                </div>
                @foreach (var row in Model)
                {
                    <div class="col-4 mt-2">
                        <div class="card sp-cha">
                            <a href="~/@row.Slug">
                                <img src="~/Public/Image/Product/@row.Img" class="card-img-top" alt="...">
                            </a>
                            <div class="card-footer sp-layer2">
                                <p class="sp-gia text-center">
                                    <a href="#"><i class="fa fa-shopping-cart"></i> </a>
                                    <i class="sp-r">@row.Price $</i>
                                </p>
                            </div>
                        </div>
                    </div>
                    @* het 1 san pham*@
                }
            </div>
            <div class="col-12 text-center mt-3">
                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            @Html.PagedListPager(Model, page => Url.Action("Products", "Site", new { page }))
                        </li>
                    </ul>
                </nav>
            </div>
            @* het phan trang*@
        </div>
    </div>
</div>


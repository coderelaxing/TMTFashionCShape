@model IEnumerable<ShopThoiTrang.Models.ModelProducts>
@if (Model.Count() != 0)
{
    <div class="col-12 loai-sanpham">
        <h3 class="smp-tieude text-center">@ViewBag.NameCat</h3>
    </div>
    foreach (var row in Model)
    {
        <div class="col-4 mt-2">
            <div class="card sp-cha">
                <a href="~/@row.Slug">
                    <img src="~/Public/Image/Product/@row.Img" class="card-img-top" alt="...">
                </a>
                <div class="card-footer sp-layer2">
                    <p class="sp-gia text-center">
                        <a href="@Url.Action("AddItem","Cart", new {productId = @row.Id})"><i class="fa fa-shopping-cart"></i> </a>
                        <i class="sp-r">@row.Price $</i>
                    </p>
                </div>
            </div>
        </div>
        @* het 1 san pham*@
    }
}



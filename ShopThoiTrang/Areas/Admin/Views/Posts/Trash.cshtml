@model PagedList.IPagedList<ShopThoiTrang.PostTopic>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Trash";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-6 text-danger text-uppercase"><strong>DANH SÁCH  BÀI VIẾT TẠM XÓA</strong></div>
            <div class="col-6 text-danger text-right">
                <a href="@Url.Action("Index", "Posts")" class="btn btn-sm btn-info">Preview</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        @Html.Partial("_Message")
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-warning">
                    <th scope="col" style="width: 150px">Ảnh Bìa</th>
                    <th scope="col">Tiêu Đề</th>
                    <th scope="col">Loại Tin</th>
                    <th scope="col">Chức Năng</th>
                    <th scope="col">Id</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model)
                {
                    <tr>
                        <th><img src="~/Public/Image/Newspaper/@row.PostImg" alt="Alternate Text" class="img-fluid" /></th>
                        <td>@row.PostTitle</td>
                        <td>@row.PostTop</td>
                        <td>
                            <a href="@Url.Action("Restore", "Posts", new { id = row.PostId })" class="btn btn-sm btn-info">Restore</a>
                            <a href="@Url.Action("Delete", "Posts", new { id = row.PostId })" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                        <td>@row.PostId</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @* het row*@
    <div class="row">
        <div class="col-12 text-center">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        @Html.PagedListPager(Model, page => Url.Action("Index", "Posts", new { page }))
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    @* het phan trang*@
</div>


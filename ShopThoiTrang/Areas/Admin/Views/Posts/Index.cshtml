@model PagedList.IPagedList<ShopThoiTrang.PostTopic>
    @using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-6 text-danger text-uppercase"><strong>DANH SÁCH  BÀI VIẾT</strong></div>
            <div class="col-6 text-danger text-right">
                <a href="@Url.Action("Create", "Posts")" class="btn btn-sm btn-info">Add</a>
                <a href="@Url.Action("Trash", "Posts")" class="btn btn-sm btn-danger">Trash</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        @Html.Partial("_Message")
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-warning">
                    <th scope="col" style="width: 150px">Ảnh Bìa</th>
                    <th scope="col">Tiêu Đề</th>
                    <th scope="col">Loại Tin</th>
                    <th scope="col">Chức Năng</th>
                    <th scope="col">Id</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model)
                {
                <tr>
                    <th><img src="~/Public/Image/Newspaper/@row.PostImg" alt="Alternate Text" class="img-fluid" /></th>
                    <td>@row.PostTitle</td>             
                    <td>@row.PostTop</td>
                    <td>
                        @if (row.PostStatus == 1)
                        {
                            <a href="@Url.Action("Status", "Posts", new { id = row.PostId })" class="btn btn-sm btn-dark">
                                <i class="fa fa-toggle-on"></i>
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Status", "Posts", new { id = row.PostId })" class="btn btn-sm btn-dark">
                                <i class="fa fa-toggle-off"></i>
                            </a>
                        }

                        <a href="@Url.Action("Edit", "Posts", new { id = row.PostId })" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i></a>
                        <a href="@Url.Action("Deltrash", "Posts", new { id = row.PostId })" class="btn btn-sm btn-danger"><i class="fa fa-trash-alt"></i></a>
                    </td>
                    <td>@row.PostId</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    @* het row*@
    <div class="row">
        <div class="col-12 text-center">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        @Html.PagedListPager(Model, page => Url.Action("Index", "Posts", new { page }))
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    @* het phan trang*@
</div>
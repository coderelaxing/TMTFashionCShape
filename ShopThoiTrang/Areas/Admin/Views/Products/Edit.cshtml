@model ShopThoiTrang.Models.ModelProducts

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
@using (Html.BeginForm("Edit", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6 text-danger text-uppercase"><strong>SỬA SẢN PHẨM</strong></div>
                <div class="col-6 text-danger text-right">
                    <button type="submit" class="btn btn-sm btn-info">Save</button>
                    <a href="@Url.Action("index", "Products")" class="btn btn-sm btn-danger">Preview</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            @Html.Partial("_Message")
            <div class="row">
                <div class="col-8">
                    <div class="form-group">
                        <label>Tên Sản Phẩm</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Chi Tiết Sản Phẩm</label>
                        @Html.EditorFor(model => model.Detail, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        <label>Từ Khóa SEO</label>
                        @Html.EditorFor(model => model.MetaKey, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MetaKey, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group">
                        <label>Mô Tả SEO</label>
                        @Html.EditorFor(model => model.MetaDesc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MetaDesc, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>CHI TIẾT SEO</label>
                        @Html.EditorFor(model => model.MetaDesc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MetaDesc, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <span class="text-danger">@ViewBag.Error</span>
                    </div>
                    <div class="form-group invisible position-absolute">
                        @Html.EditorFor(model => model.Slug, new { htmlAttributes = new { @class = "form-control" } })

                        @Html.EditorFor(model => model.Created_At, new { htmlAttributes = new { @class = "form-control" } })

                        @Html.EditorFor(model => model.Created_By, new { htmlAttributes = new { @class = "form-control" } })

                        @Html.EditorFor(model => model.Img, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>
                @*  het col-8*@
                <div class="col-4">
                    <div class="form-group">
                        <label>Loại Sản Phẩm</label>
                        @Html.DropDownListFor(model => model.CatId, (SelectList)ViewBag.ListCatId, "[---- Chọn Loại SP ----]", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CatId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Số Lượng</label>
                        @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Giá</label>
                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Giá Khuyến Mại</label>
                        @Html.EditorFor(model => model.PriceSale, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PriceSale, "", new { @class = "text-danger" })
                    </div>  
                    <div class="form-group">
                        <label>Cập Nhật Hình Ảnh</label>
                        <input type="file" name="img" class="form-control" />
                        @Html.ValidationMessage("HINHANH", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Trạng Thái</label>
                        @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Text = "Xuất Bản", Value = "1" }, new SelectListItem { Text = "Chưa Xuất Bản", Value = "2" } }, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                </div>
                @* het col-4*@
            </div>
            @* het row*@
        </div>
    </div>

}

